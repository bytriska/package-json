{
  "name": "@bytriska/package-json",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.27.0",
  "description": "Simple utilities to find the workspace root, read and write package.json files, and more.",
  "author": "Triska Mahfud K (https://github.com/bytriska)",
  "license": "MIT",
  "funding": "https://github.com/sponsors/bytriska",
  "homepage": "https://github.com/bytriska/package-json#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytriska/package-json.git"
  },
  "bugs": "https://github.com/bytriska/package-json/issues",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "pnpm test:types",
    "build": "tsup-node",
    "prepublishOnly": "pnpm build",
    "release": "pnpm test && bumpp && pnpm publish --access public",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "vitest",
    "test:types": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "^4.0.16",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,json,yaml,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
